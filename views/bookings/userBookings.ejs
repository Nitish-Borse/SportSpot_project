<% layout("/layouts/boilerplate") -%>
    <div class="container mt-4">
        <h2 class="mb-4 text-center">My Bookings</h2>
        <% if (bookings.length===0) { %>
            <p class="text-center text-muted">You have no bookings yet.</p>
            <% } else { %>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Sport Item</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let b of bookings) { %>
                            <% const itemExists=!!b.sportItem; // Logic to determine if cancellation is possible const
                                isCancellable=itemExists && b.status==='confirmed' && new Date(b.startAt)> new Date();
                                %>

                                <tr
                                    class="<%= (b.status === 'cancelled') ? 'table-danger' : (isCancellable ? '' : 'table-warning') %>">
                                    <td>
                                        <% if (itemExists) { %>
                                            <a href="/sportItems/<%= b.sportItem._id %>">
                                                <%= b.sportItem.title %>
                                            </a>
                                            <% } else { %>
                                                **Item Deleted**
                                                <% } %>
                                    </td>
                                    <td>
                                        <%= b.startAt.toLocaleString() %>
                                    </td>
                                    <td>
                                        <%= b.endAt.toLocaleString() %>
                                    </td>
                                    <td>
                                        <%= b.status %>
                                    </td>

                                    <td>
                                        <% if (isCancellable) { %>
                                            <form method="POST" action="/<%= b._id %>/cancel?_method=PUT">
                                                <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                                            </form>
                                            <% } else if (b.status==='cancelled' ) { %>
                                                <span class="text-danger">N/A</span>
                                                <% } else { %>
                                                    <span class="text-muted">No Action</span>
                                                    <% } %>
                                    </td>
                                </tr>
                                <% } %>
                    </tbody>
                </table>
                <% } %>
    </div>