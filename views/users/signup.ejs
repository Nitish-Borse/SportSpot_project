<% layout("/layouts/boilerplate") -%>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-xl-4 col-lg-5 col-md-6 col-sm-8 mx-auto">
            
            <div class="card shadow p-4">
                <h2 class="card-title text-center mb-4">Sign Up on SportSpot</h2>
                
                <form method="post" action="/signup" class="needs-validation" novalidate>

                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" name="username" id="username" class="form-control" required>
                        <div class="valid-feedback">Username Looks Good!</div>
                        <div class="invalid-feedback">Please enter a valid username.</div>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email" class="form-control" required>
                        <div class="invalid-feedback">Please enter a valid email.</div>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" id="password" class="form-control" required>
                        <div class="invalid-feedback">Please enter a valid password.</div>
                    </div>

                    <button class="btn btn-success w-100 mt-3 mb-3" style="background-color: #fe424d; border-color: #fe424d;">
                        Signup
                    </button>
                    
                </form>

                <hr>
                
                <p class="text-center mb-0 mt-3">
    Already have an account? <a href="/login" class="text-decoration-none">Log in</a> 
</p>

            </div>
        </div>
    </div>
</div>